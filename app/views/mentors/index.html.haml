%h1 Mentors


-@mentors.each do |mentor|
  .panel.panel-default
    .panel-heading
      %img{:src => mentor.gravatar_image(50)}
      %h3{:style => 'display:inline; padding-left: 15px'}= mentor.username
    .panel-body
      %p
        / %i.fa.fa-tachometer
        = Member.expertise_levels[mentor.expertise]
      %p= mentor.about
      .row
        .col-md-12
          %h4 Skills
          %ul.skills
            - mentor.skills.each do |skill|
              %li{:class => "icon-#{skill.name.downcase}", :title => skill.name}

          %h4 Interests
          -mentor.interests.each do |interest|
            %span.label.label-default= interest.name

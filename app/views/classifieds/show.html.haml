.panel.panel-default
  .panel-body
    %h1 Could you mentor me?
    .row
    .col-md-12
      %em #{time_ago_in_words(@classified.created_at.to_time)} ago
      %br
      %br
      %p.lead= @classified.description
      - @classified.skills.each do |skill|
        %li{:class => "icon-#{skill.name.downcase}", :style => "list-style-type: none", :style => "display: inline", :title => skill.name }
        = skill.name
      .row
      .col-md-12
      - if @classified.remote
        %p
          %span.label.label-info
            %i.fa.fa-laptop
              Remote
      - if @classified.face_to_face
        %p
          %span.label.label-info
            %i.fa.fa-coffee
             
